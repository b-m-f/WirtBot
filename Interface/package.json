{
  "name": "wirt-interface",
  "version": "1.0.0",
  "author": "b-m-f <max@ehlers.berlin>",
  "license": "AGPL-3",
  "scripts": {
    "build": "vue-cli-service build",
    "build:rust": "wasm-pack build wasm -- --locked",
    "test:unit": "vue-cli-service test:unit",
    "test:rust": "wasm-pack test wasm --node",
    "test:e2e": "TEST_URL=localhost:8080 nightwatch",
    "test:e2e:headless": "TEST_URL=localhost:8080 nightwatch --env integration",
    "test:e2e:ci": "TEST_URL=test-server nightwatch --env integration",
    "run-server-for-e2e": "http-server dist",
    "test:ci": "npm run test:unit && npm run test:rust && npm run test:e2e:ci",
    "test": "npm run test:unit && npm run test:rust && npm run test:e2e",
    "audit": "npm audit --production",
    "lint": "vue-cli-service lint",
    "dev": "vue-cli-service serve --mode=development",
    "i18n:report": "vue-cli-service i18n:report --src './src/**/*.?(js|vue)' --locales './src/locales/**/*.json'"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.30",
    "@fortawesome/free-solid-svg-icons": "^5.14.0",
    "@fortawesome/vue-fontawesome": "^0.1.10",
    "core-js": "^3.6.5",
    "jszip": "^3.5.0",
    "lodash-es": "^4.17.15",
    "text-encoding": "^0.7.0",
    "vue": "^2.6.11",
    "vue-i18n": "^8.21.0",
    "vue-router": "^3.4.3",
    "vuex": "^3.5.1",
    "vuex-persistedstate": "^3.1.0"
  },
  "devDependencies": {
    "@kazupon/vue-i18n-loader": "^0.5.0",
    "@vue/cli-plugin-babel": "^4.5.3",
    "@vue/cli-plugin-eslint": "^4.5.3",
    "@vue/cli-plugin-unit-jest": "^4.5.3",
    "@vue/cli-service": "^4.5.3",
    "@vue/test-utils": "^1.0.0",
    "@wasm-tool/wasm-pack-plugin": "1.3.1",
    "babel-eslint": "^10.1.0",
    "chromedriver": "^84.0.1",
    "eslint": "^7.7.0",
    "eslint-plugin-vue": "^6.2.2",
    "fibers": "^5.0.0",
    "forever": "^3.0.0",
    "geckodriver": "^1.20.0",
    "html-webpack-plugin": "^4.3.0",
    "http-server": "^0.12.3",
    "nightwatch": "^1.3.7",
    "qrcode": "^1.4.4",
    "sass": "^1.26.10",
    "sass-loader": "^9.0.3",
    "start-server-and-test": "^1.11.3",
    "vue-cli-plugin-i18n": "^1.0.1",
    "vue-loader": "^15.9.3",
    "vue-markdown-loader": "^2.4.1",
    "vue-template-compiler": "^2.6.11",
    "wasm-pack": "^0.9.1",
    "webpack-bundle-analyzer": "^3.8.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {
      "no-console": "warn",
      "no-debugger": "warn"
    },
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "overrides": [
      {
        "files": [
          "**/src/**/*.spec.js"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "eslintIgnore": [
    "wasm"
  ],
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}
