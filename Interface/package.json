{
  "name": "wirt-interface",
  "version": "1.0.0",
  "author": "b-m-f <max@ehlers.berlin>",
  "license": "AGPL-3",
  "scripts": {
    "build": "vue-cli-service build",
    "build:rust": "wasm-pack build wasm -- --locked",
    "test:unit": "vue-cli-service test:unit",
    "test:rust": "wasm-pack test key-generator --headless --firefox",
    "test:e2e": "nightwatch",
    "test:e2e:headless": "nightwatch --env integration",
    "run-server-for-e2e": "http-server dist",
    "test:e2e:ci": "npm run build && start-server-and-test run-server-for-e2e http://localhost:8080 test:e2e:headless",
    "audit": "npm audit --production",
    "lint": "vue-cli-service lint",
    "dev": "vue-cli-service serve --mode=development",
    "i18n:report": "vue-cli-service i18n:report --src './src/**/*.?(js|vue)' --locales './src/locales/**/*.json'"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.28",
    "@fortawesome/free-solid-svg-icons": "^5.13.0",
    "@fortawesome/vue-fontawesome": "^0.1.9",
    "core-js": "^3.6.5",
    "jszip": "^3.4.0",
    "lodash-es": "^4.17.15",
    "text-encoding": "^0.7.0",
    "vue": "^2.6.11",
    "vue-i18n": "^8.17.3",
    "vue-router": "^3.1.6",
    "vuex": "^3.2.0",
    "vuex-persistedstate": "^2.7.1"
  },
  "devDependencies": {
    "@kazupon/vue-i18n-loader": "^0.3.0",
    "@vue/cli-plugin-babel": "^4.3.1",
    "@vue/cli-plugin-eslint": "^4.3.1",
    "@vue/cli-plugin-unit-jest": "^4.3.1",
    "@vue/cli-service": "^4.3.1",
    "@vue/test-utils": "1.0.0-beta.29",
    "@wasm-tool/wasm-pack-plugin": "1.1.0",
    "babel-eslint": "^10.1.0",
    "chromedriver": "^80.0.2",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "fibers": "^4.0.2",
    "forever": "^2.0.0",
    "geckodriver": "^1.19.1",
    "html-webpack-plugin": "^3.2.0",
    "http-server": "^0.12.1",
    "nightwatch": "^1.3.4",
    "qrcode": "^1.4.4",
    "sass": "^1.26.3",
    "sass-loader": "^8.0.2",
    "start-server-and-test": "^1.11.0",
    "vue-cli-plugin-i18n": "^0.6.1",
    "vue-loader": "^15.9.1",
    "vue-markdown-loader": "^2.4.1",
    "vue-template-compiler": "^2.6.11",
    "webpack-bundle-analyzer": "^3.7.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {
      "no-console": "warn",
      "no-debugger": "warn"
    },
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "overrides": [
      {
        "files": [
          "**/src/**/*.spec.js"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}